            <HorizontalStackLayout
                Margin="0,30"
                HorizontalOptions="Center"
                Spacing="5">
                <Border
                    Padding="10,5"
                    Stroke="#00AB37"
                    StrokeShape="RoundRectangle 9">
                    <Label
                        FontSize="24"
                        Text="01"
                        TextColor="#00AB37" />
